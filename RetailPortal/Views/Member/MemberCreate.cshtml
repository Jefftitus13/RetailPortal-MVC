@model RetailPortal.Models.MemberDetails

@{
    ViewData["Title"] = "Create Member";
}

<h2>Create Member</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="MemberName" class="control-label"></label>
        <input asp-for="MemberName" class="form-control" />
        <span asp-validation-for="MemberName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State" class="control-label"></label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="District" class="control-label"></label>
        <input asp-for="District" class="form-control" />
        <span asp-validation-for="District" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RelationshipToPolicyholder" class="control-label"></label>
        <input asp-for="RelationshipToPolicyholder" class="form-control" />
        <span asp-validation-for="RelationshipToPolicyholder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <!-- Save button -->
        <input type="submit" value="Save" class="btn btn-primary" />

        <!-- Next button -->
        <button type="submit" class="btn btn-secondary" formaction="@Url.Action("ProductDetails", "MemberDetails")">Next</button>
    </div>
    
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
