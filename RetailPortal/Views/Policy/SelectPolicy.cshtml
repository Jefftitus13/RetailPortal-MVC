@model IEnumerable<RetailPortal.Models.PolicyDetails>

<h2>Select a Policy</h2>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Policy Number</th>
                <th>Policy Type</th>
                <th>Coverage Amount</th>
                <th>Premium Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PolicyNumber</td>
                    <td>@item.PolicyType</td>
                    <td>@item.CoverageAmount</td>
                    <td>@item.PremiumAmount</td>
                    <td>
                        <form asp-action="SaveSelectedPolicy" method="post">
                            <input type="hidden" name="policyId" value="@item.PolicyNumber" />
                            <button type="submit" class="btn btn-primary">Select</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
